@using ExamTask.Models;
@using ExamTask.ViewModels;
 @model PaginateVM<Team>
@{
    int count = (Model.CurrentPage-1)*Model.Take;
}
<div class="row">
<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Striped Table</h4>
                 <a class="btn btn-primary rounded-pill" asp-controller="Team" asp-action="Create">Create</a>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                           No
                          </th>
                          <th>
                           Title
                          </th>
                          <th>
                            Description
                          </th>
                                <th>
                                    Work
                                </th>
                         
                          <th>
                            Image
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach(var item in Model.Items)
                            {
                                count++;
                                <tr>
                          
                          <td>
                            @count
                          </td>
                          <td>
                           @item.FullName
                          </td>
                          <td>
                           @item.Description
                          </td>
                          <td>
                            @item.Work
                          </td>
                                   
                                    <td>
                                        <img style="width:160px;height:150px" src="~/uploads/team/@item.Image">
                                    </td>
                                    <td>
                                        <a class="btn btn-success rounded-pill" asp-controller="Team" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger rounded-pill" asp-controller="Team" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                        </tr>
                      }
                      </tbody>
                    </table>
                  </div>
                <nav aria-label="...">
                    <ul class="pagination">
                        <li class="page-item @(Model.CurrentPage==1 ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(Model.CurrentPage-1)" tabindex="-1">Previous</a>
                        </li>
                       @for(int i=0;i<Model.TotalPage;i++)
                       {
                           <li class="page-item @(i+1==Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-route-page="@(i+1)">@(i+1) <span class="sr-only">(current)</span></a>
                        </li>
                       }
                        
                        <li class="page-item @(Model.CurrentPage>=Model.TotalPage ? "disabled" : "")">
                            <a class="page-link" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                        </li>
                    </ul>
                </nav>
                </div>
              </div>
            </div>
            </div>